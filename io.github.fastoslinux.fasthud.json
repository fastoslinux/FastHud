{
    "app-id" : "io.github.fastoslinux.fasthud",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "44",
    "sdk" : "org.gnome.Sdk",
    "command" : "fasthudgtk4devel",
    "finish-args" : [
        "--socket=fallback-x11",
        "--socket=wayland",
        "--filesystem=xdg-config/MangoHud:rw",
        "--share=ipc",
        "--device=dri"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "fasthudgtk4devel",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/fastoslinux/FastHud.git",
                    "tag":"1.0",
                    "commit":"b869c4d9ed1057cae87cd6257bd63faa36271581"
                }
            ]
        }
    ]
}
